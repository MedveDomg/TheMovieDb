<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="97dp"
    tools:layout_editor_absoluteX="16dp">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="122dp"
        android:layout_height="43dp"
        tools:text="TextView"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="148dp" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        tools:text="TextView"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.061"
        app:layout_constraintStart_toEndOf="@+id/tvTitle"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="136dp"
        android:layout_height="305dp"
        app:srcCompat="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.0"/>



    <TextView
        android:id="@+id/tvYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017"
        android:textColor="@color/light_black"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvCategories"
        android:layout_width="149dp"
        android:layout_height="19dp"
        android:text="Action, Crime, Comedy"
        android:ellipsize="end"
        android:textColor="@color/light_black"
        app:layout_constraintBottom_toBottomOf="@+id/tvYear"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toEndOf="@+id/tvYear"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" />" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="190dp"
        android:text="TextView"
        android:layout_height="73dp"
        android:textColor="@color/light_black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:maxLines="4"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvYear"
        app:layout_constraintTop_toBottomOf="@+id/tvYear"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.278" />

    <View
        android:id="@+id/view"
        style="@style/divider_light_grey"
        android:layout_height="1dp"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintLeft_toLeftOf="@+id/ivPoster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.797"
        app:layout_constraintStart_toEndOf="@+id/ivPoster" />

    <TextView
        android:id="@+id/tvMoreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_info"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/ivPoster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.908"
        app:layout_constraintStart_toStartOf="@+id/tvTitle" />

</android.support.constraint.ConstraintLayout>